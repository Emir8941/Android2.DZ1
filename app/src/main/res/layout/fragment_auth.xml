<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".auth.AuthFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_notes_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="304dp"
        android:inputType="phone"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="14dp"
        android:hint="Введите номер"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textColorHint="#B1B1B1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="14dp"
        android:hint="Введите код"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textColorHint="#B1B1B1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_get_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/button"
        android:text="Получить код"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/button"
        android:text="Подтвердить"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:layout_marginBottom="135dp"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/orange"
        android:text="Отправить снова"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#8E8B8B"
        android:text="Регистрация по номеру"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>